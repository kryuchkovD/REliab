<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Reliab" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>

        <item name="reliab_text_weak">@color/lamantine</item>
        <item name="reliab_background_norm">@color/background</item>
        <item name="reliab_interaction_norm">@color/accent</item>
        <item name="reliab_text_disabled">@color/smoky</item>
        <item name="reliab_text_norm">@color/white</item>
    </style>

    <style name="Reliab.Text" parent="TextAppearance.AppCompat" />

    <style name="Reliab.Text.DefaultSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Reliab.Text.DefaultSmall.Weak">
        <item name="android:textColor">@color/text_weak_selector</item>
    </style>

    <style name="Reliab.Text.Medium" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Reliab.Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_norm_selector</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Reliab.Text.Caption.Hint">
        <item name="android:textColor">#6D697D</item>
    </style>

    <style name="Reliab.Text.Caption.Weak">
        <item name="android:textColor">@color/lamantine</item>
    </style>

    <style name="TableRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TableLabelText" parent="@style/Reliab.Text.DefaultSmall.Weak">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TableValueText" parent="Reliab.Text.DefaultSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="Divider"/>

    <style name="Divider.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#3B3747</item>
    </style>

    <style name="SectionHeadlineText">
        <item name="android:textAppearance">@style/Reliab.Text.DefaultSmall</item>
        <item name="android:textColor">#6D697D</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SectionHeadlineText.Brand">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>
</resources>